# Environment Configuration for Face Recognition Django App

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/face_recognition_db
# Alternative SQLite for development:
# DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration (for Celery and Channels)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Face Recognition Settings
FACE_RECOGNITION_MODEL_PATH=/path/to/insightface/models
FACE_RECOGNITION_THRESHOLD=0.6
FACE_QUALITY_THRESHOLD=0.5
LIVENESS_DETECTION_ENABLED=True
OBSTACLE_DETECTION_ENABLED=True

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=face_embeddings
# Alternative: Use persistent ChromaDB
# CHROMA_PERSIST_DIRECTORY=/path/to/chromadb/data

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Keys
FACE_DATA_ENCRYPTION_KEY=your-32-char-encryption-key-here
PERSONAL_DATA_ENCRYPTION_KEY=another-32-char-key-for-personal

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File Upload Settings
MEDIA_ROOT=/path/to/media/files
STATIC_ROOT=/path/to/static/files
MAX_UPLOAD_SIZE=10485760  # 10MB

# WebRTC/STUN/TURN Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVERS=turn:your-turn-server.com:3478
WEBRTC_TURN_USERNAME=username
WEBRTC_TURN_PASSWORD=password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/face_recognition/app.log

# Performance Settings
FACE_RECOGNITION_WORKERS=4
MAX_CONCURRENT_ENROLLMENTS=10
MAX_CONCURRENT_AUTHENTICATIONS=50

# Development Settings
DJANGO_DEVELOPMENT_MODE=True
ENABLE_DEBUG_TOOLBAR=True
CORS_ALLOW_ALL_ORIGINS=True

# Production Security (set these in production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin

# Telegram Error Monitoring Configuration
TELEGRAM_ERROR_LOGGING_ENABLED=False
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
ENVIRONMENT=development



