[Unit]
Description=Celery Worker for Research Fish
After=network.target

[Service]
User=admin
Group=admin
WorkingDirectory=/home/admin/face-recognition-v2/face_recognition_app

ExecStart=/home/admin/face-recognition-v2/venv/bin/celery -A face_app worker --pool=threads --loglevel=info --concurrency=4

Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target