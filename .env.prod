# Django Settings
DEBUG=false
SECRET_KEY=change-this-in-production
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1,human-face.hellodigi.id
CSRF_TRUSTED_ORIGINS=https://human-face.hellodigi.id
CORS_ALLOWED_ORIGINS=https://human-face.hellodigi.id

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=face_recognition
DB_USER=postgres
DB_PASSWORD=change-this-password-in-production
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MinIO Configuration
USE_MINIO=true
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=change-this-access-key
MINIO_SECRET_KEY=change-this-secret-key
MINIO_BUCKET_NAME=face-recognition
MINIO_USE_SSL=false
MINIO_VERIFY_SSL=false

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Security
FIELD_ENCRYPTION_KEY=change-this-encryption-key-in-production

# SSL/HTTPS Settings (for production)
SECURE_SSL_REDIRECT=true
SECURE_PROXY_SSL_HEADER_NAME=HTTP_X_FORWARDED_PROTO
SECURE_PROXY_SSL_HEADER_VALUE=https